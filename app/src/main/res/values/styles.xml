<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.Day" parent="AppTheme">
        <item name="textColor">@color/text_color_day</item>
        <item name="backgroundColor">@color/background_color_day</item>
        <item name="toolbarTextColor">@color/toolbar_text_color_day</item>
        <item name="toolbarbackgroundColor">@color/toolbar_background_color_day</item>
        <item name="tab_TextColor">@color/tab_text_color_day</item>
        <item name="tab_BackgroundColor">@color/tab_background_color_day</item>
        <item name="tab_SelectedTextColor">@color/tab_selected_color_day</item>
        <item name="tab_IndicatroColor">@color/tab_indicatro_color_day</item>
        <item name="headViewColor">@color/head_view_color_day</item>
    </style>


    <style name="AppTheme.Night" parent="AppTheme">
        <item name="textColor">@color/text_color_night</item>
        <item name="backgroundColor">@color/background_color_night</item>
        <item name="toolbarTextColor">@color/toolbar_text_color_night</item>
        <item name="toolbarbackgroundColor">@color/toolbar_background_color_night</item>
        <item name="tab_TextColor">@color/tab_text_color_night</item>
        <item name="tab_BackgroundColor">@color/tab_background_color_night</item>
        <item name="tab_SelectedTextColor">@color/tab_selected_color_night</item>
        <item name="tab_IndicatroColor">@color/tab_indicatro_color_night</item>
        <item name="headViewColor">@color/head_view_color_night</item>
    </style>

    <style name="Theme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@style/noAnimation</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="noAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

</resources>
