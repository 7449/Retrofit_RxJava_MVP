<?xml version="1.0" encoding="utf-8"?>
<com.example.y.mvp.utils.theme.widget.ThemeCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/image_detail_margin"
    android:layout_marginEnd="@dimen/image_detail_margin"
    android:layout_marginStart="@dimen/image_detail_margin"
    android:layout_marginTop="@dimen/image_detail_margin"
    android:background="?attr/main_bg"
    app:cardCornerRadius="@dimen/image_detail_margin">


    <com.example.y.mvp.utils.theme.widget.ThemeRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/main_bg">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/news_image_width"
            android:layout_height="@dimen/news_image_height"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

        <com.example.y.mvp.utils.theme.widget.ThemeLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_marginLeft"
            android:layout_toRightOf="@+id/image"
            android:background="?attr/main_bg"
            android:orientation="vertical"
            tools:ignore="RtlHardcoded">

            <com.example.y.mvp.utils.theme.widget.ThemeRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/main_bg">

                <com.example.y.mvp.utils.theme.widget.ThemeTextView
                    android:id="@+id/tv_fromname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/image_list_padding"
                    android:textColor="?attr/main_textcolor" />

                <com.example.y.mvp.utils.theme.widget.ThemeTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_fromname"
                    android:padding="@dimen/image_list_padding"
                    android:textColor="?attr/main_textcolor"
                    tools:ignore="RtlHardcoded" />

            </com.example.y.mvp.utils.theme.widget.ThemeRelativeLayout>

            <com.example.y.mvp.utils.theme.widget.ThemeTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="@dimen/image_list_padding"
                android:textColor="?attr/main_textcolor" />


            <com.example.y.mvp.utils.theme.widget.ThemeTextView
                android:id="@+id/tv_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/image_list_padding"
                android:textColor="?attr/second_textcolor" />

        </com.example.y.mvp.utils.theme.widget.ThemeLinearLayout>

    </com.example.y.mvp.utils.theme.widget.ThemeRelativeLayout>

</com.example.y.mvp.utils.theme.widget.ThemeCardView>
